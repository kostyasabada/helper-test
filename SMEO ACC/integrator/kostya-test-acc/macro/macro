    <#assign id = {
        "New": "690",
        "Discontinued": "691",
        "On Hold": "692",
        "Block Payments": "693",
        "Active (fleet)": "694",
        "Active (non-fleet)": "100357",
        "In arrears": "100555",
        "Bankrupt": "425075",
        "Blocked": "425051",
